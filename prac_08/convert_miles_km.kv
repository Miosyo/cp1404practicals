BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: ''
            size_hint: (3, 1)
            id: text_input
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_conversion()
    Label:
        text_autoupdate: True
        color: (1, 1, 0.7, 1)
        text: app.conversion_result
